<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@drawable/background_rounded_corner"
   android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    >

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/postDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/31/2021"
            android:paddingTop="5dp"
            android:gravity="left"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/postedAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver"
            android:gravity="left|center"
            android:textStyle="bold"
            android:layout_weight="1"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/fromLocationImage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/user_location"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/fromLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waterloo"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/toLocationImage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/place_marker" />

        <TextView
            android:id="@+id/toLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brampton"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/seatsOrPriceImage"
            android:layout_width="match_parent"
            android:layout_gravity="top|center"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/male_user" />

        <TextView
            android:id="@+id/seatsOrPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/more_than"
        android:layout_gravity="center_vertical"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@drawable/transparent_drawable"/>
</LinearLayout>