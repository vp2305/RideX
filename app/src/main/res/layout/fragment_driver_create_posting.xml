<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverCreatePostingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/accent_bgcolor"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#BFFFFFFF"
                            android:text="@string/from_text" />

                        <EditText
                            android:id="@+id/driverFromLocation"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:hint="eg. Waterloo ON"
                            android:textColorHint="#51000000"
                            android:background="@drawable/accent_input_text_select"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:textColor="#BFFFFFFF"
                            android:text="@string/to_text" />

                        <EditText
                            android:id="@+id/driverToLocation"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:hint="eg. Toronto ON"
                            android:textColorHint="#51000000"
                            android:textColor="@color/black"
                            android:inputType="textPersonName"
                            android:padding="5dp"
                            android:background="@drawable/accent_input_text_select"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Date"
                            android:textSize="15sp"
                            android:textColor="#BFFFFFFF"
                            />

                        <EditText
                            android:id="@+id/driverRideDate"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textColorHint="#51000000"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:background="@drawable/accent_input_text_select"
                            android:hint="dd/mm/yyyy"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Time"
                            android:textSize="15sp"
                            android:textColor="#BFFFFFFF"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/accent_spinner_background">

                            <Spinner
                                android:id="@+id/driverRideTime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/availableTimeSlots"
                                android:backgroundTint="@color/black"
                                android:popupBackground="@color/white" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Available Seats"
                            android:textSize="15sp"
                            android:textColor="#BFFFFFFF"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/accent_spinner_background"
                            android:layout_marginBottom="10dp"
                            >
                            <Spinner
                                android:id="@+id/availableSeats"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:popupBackground="@color/white"
                                android:backgroundTint="@color/black"
                                android:entries="@array/numberOfSeats"
                                />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Price"
                            android:textSize="15sp"
                            android:textColor="#BFFFFFFF"
                            />

                        <EditText
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:background="@drawable/accent_input_text_select"
                            android:text="" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Car Details"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    >
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Model"
                            android:textSize="15sp"
                            android:textColor="#9E000000"
                            />

                        <EditText
                            android:id="@+id/carModel"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:textColorHint="#51000000"
                            android:hint="eg. Honda Civic"
                            android:background="@drawable/input_text_select"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Year"
                            android:textSize="15sp"
                            android:textColor="#9E000000"
                            />

                        <EditText
                            android:id="@+id/carYear"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:textColorHint="#51000000"
                            android:hint="YYYY"
                            android:background="@drawable/input_text_select"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="License Plate"
                            android:textSize="15sp"
                            android:textColor="#9E000000"
                            />

                        <EditText
                            android:id="@+id/carLicensePlate"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:inputType="textPersonName"
                            android:background="@drawable/input_text_select"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Car Color"
                            android:textSize="15sp"
                            android:textColor="#9E000000"
                            />

                        <EditText
                            android:id="@+id/carColor"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:inputType="textPersonName"
                            android:background="@drawable/input_text_select"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Additional Comments (optional)"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/postDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:background="@drawable/input_text_select"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/driverPostBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:text="Post"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>